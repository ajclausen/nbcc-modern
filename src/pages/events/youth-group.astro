---
import PageLayout from '@/layouts/PageLayout.astro';
import Container from '@/components/ui/Container.astro';
import Button from '@/components/ui/Button.astro';

// What we do activities
const activities = [
  {
    title: 'Worship Night',
    subtitle: 'Every Wednesday',
    description: 'Contemporary worship with live music, focusing on connecting with God through song and prayer.',
    icon: 'M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3',
    color: 'from-primary-500 to-primary-600',
  },
  {
    title: 'Game Nights',
    subtitle: 'Monthly',
    description: 'Fun fellowship through video games, board games, and outdoor activities.',
    icon: 'M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
    color: 'from-terra-500 to-terra-600',
  },
  {
    title: 'Service Projects',
    subtitle: 'Quarterly',
    description: 'Hands-on opportunities to serve our community and make a real difference.',
    icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
    color: 'from-sage-500 to-sage-600',
  },
  {
    title: 'Competitions',
    subtitle: 'Seasonal',
    description: 'Bible Bowl, talent shows, and friendly competitions that build community.',
    icon: 'M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z',
