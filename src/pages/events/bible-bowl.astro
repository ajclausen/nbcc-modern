    meetingTime: 'Sundays 4:00-5:00 PM',
    color: 'from-green-400 to-green-500',
  },
  {
    name: 'Middle School',
    ages: '7th - 8th Grade',
    description: 'Building Bible knowledge and study skills through engaging competition format.',
    studyBook: 'Book of Acts',
    meetingTime: 'Sundays 5:00-6:00 PM',
    color: 'from-primary-500 to-primary-600',
  },
  {
    name: 'High School',
    ages: '9th - 12th Grade',
    description: 'Advanced Bible study with challenging questions and leadership opportunities.',
    studyBook: 'Romans & Galatians',
    meetingTime: 'Sundays 5:00-6:00 PM',
    color: 'from-terra-500 to-terra-600',
  },
