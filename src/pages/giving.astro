---
import PageLayout from '@/layouts/PageLayout.astro';
import Container from '@/components/ui/Container.astro';
import Button from '@/components/ui/Button.astro';
import { siteConfig } from '@/data/siteConfig';

const impactAreas = [
  {
    title: 'Weekly Worship',
    description: 'Sunday School, Main Service, Kids Church, and Wednesday Prayer Meetings',
    icon: 'M9 19V6l12-3v13M9 19c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zm12-3c0 1.105-1.343 2-3 2s-3-.895-3-2 1.343-2 3-2 3 .895 3 2zM9 10l12-3',
  },
  {
    title: 'Community Outreach',
    description: 'Serving families in need, community meals, and local mission partnerships',
    icon: 'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
  },
  {
    title: 'Youth & Children',
    description: 'Programs and resources to invest in the next generation of believers',
    icon: 'M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  {
    title: 'Building & Grounds',
    description: 'Maintaining our historic 168-year-old church home for future generations',
    icon: 'M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4',
  },
];
---

<PageLayout
  title="Give"
  description="Support the ministry of New Brunswick Church of Christ. Your generosity helps us serve our community and share the love of Christ."
  heroTitle="Generous Giving"
  heroSubtitle="Partner with us in sharing Christ's love"
>
  <!-- Scripture Introduction -->
  <section class="relative py-20 lg:py-28 overflow-hidden">
    <!-- Decorative background -->
    <div class="absolute inset-0 bg-gradient-to-br from-cream-50 via-white to-golden-50/30"></div>
    <div class="absolute top-0 left-0 w-96 h-96 bg-terra-100/20 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-64 h-64 bg-primary-100/30 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>

    <Container class="relative">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-flex items-center gap-2 mb-6">
            <span class="w-8 h-[2px] bg-terra-400"></span>
            <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">Why We Give</span>
            <span class="w-8 h-[2px] bg-terra-400"></span>
          </div>

          <p class="text-xl lg:text-2xl text-stone-600 leading-relaxed mb-8">
            Giving is an act of worship and a way we partner together in God's work.
            Your generosity enables us to share the love of Christ with our community,
            support those in need, and maintain our church home.
          </p>
        </div>

        <!-- Scripture Quote -->
        <blockquote class="relative bg-primary-900 rounded-2xl p-10 lg:p-14 text-center shadow-elevated overflow-hidden">
          <!-- Texture -->
          <div class="absolute inset-0 opacity-[0.03]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

          <!-- Decorative quotation mark -->
          <div class="absolute -top-4 -left-4 text-8xl font-display text-primary-700/30 leading-none">"</div>

          <p class="relative text-2xl md:text-3xl lg:text-4xl font-display text-cream-100 italic mb-6 leading-relaxed">
            Each of you should give what you have decided in your heart to give,
            not reluctantly or under compulsion, for God loves a cheerful giver.
          </p>
          <cite class="relative text-terra-400 not-italic font-medium text-lg">â€” 2 Corinthians 9:7</cite>

          <!-- Decorative quotation mark -->
          <div class="absolute -bottom-8 -right-4 text-8xl font-display text-primary-700/30 leading-none rotate-180">"</div>
        </blockquote>
      </div>
    </Container>
  </section>

  <!-- Ways to Give -->
  <section class="py-20 bg-stone-100 relative overflow-hidden">
    <!-- Texture -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

    <Container class="relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 mb-4">
          <span class="w-8 h-[1px] bg-terra-400"></span>
          <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">How to Give</span>
          <span class="w-8 h-[1px] bg-terra-400"></span>
        </div>
        <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-4">
          Ways to Give
        </h2>
        <p class="text-stone-600 text-lg max-w-2xl mx-auto">
          Choose the giving method that works best for you
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- Online Giving -->
        <div class="group bg-white rounded-2xl p-8 shadow-soft hover:shadow-card transition-all duration-300 border border-cream-200 relative overflow-hidden">
          <!-- Number badge -->
          <div class="absolute -top-3 -left-3 w-10 h-10 bg-terra-500 rounded-xl flex items-center justify-center font-display font-bold text-lg text-white shadow-lg">
            1
          </div>

          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-primary-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>

          <h3 class="font-display text-xl font-semibold text-primary-900 mb-3 text-center">
            Give Online
          </h3>
          <p class="text-stone-600 text-center mb-6 leading-relaxed">
            Give securely online using your credit card, debit card, or bank account.
            Set up one-time or recurring gifts.
          </p>

          <a href="#online-giving" class="btn btn-warm w-full">
            Give Now
          </a>
        </div>

        <!-- In Person -->
        <div class="group bg-white rounded-2xl p-8 shadow-soft hover:shadow-card transition-all duration-300 border border-cream-200 relative overflow-hidden">
          <!-- Number badge -->
          <div class="absolute -top-3 -left-3 w-10 h-10 bg-terra-500 rounded-xl flex items-center justify-center font-display font-bold text-lg text-white shadow-lg">
            2
          </div>

          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-sage-100 to-sage-200 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-sage-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
            </svg>
          </div>

          <h3 class="font-display text-xl font-semibold text-primary-900 mb-3 text-center">
            Give In Person
          </h3>
          <p class="text-stone-600 text-center mb-6 leading-relaxed">
            Drop your gift in the offering plate during our Sunday worship service.
            Envelopes are available in the pews.
          </p>

          <Button href="/visit" variant="outline" class="w-full">
            Plan Your Visit
          </Button>
        </div>

        <!-- By Mail -->
        <div class="group bg-white rounded-2xl p-8 shadow-soft hover:shadow-card transition-all duration-300 border border-cream-200 relative overflow-hidden">
          <!-- Number badge -->
          <div class="absolute -top-3 -left-3 w-10 h-10 bg-terra-500 rounded-xl flex items-center justify-center font-display font-bold text-lg text-white shadow-lg">
            3
          </div>

          <div class="w-16 h-16 mx-auto mb-6 rounded-2xl bg-gradient-to-br from-golden-100 to-golden-200 flex items-center justify-center group-hover:scale-110 transition-transform">
            <svg class="w-8 h-8 text-golden-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
          </div>

          <h3 class="font-display text-xl font-semibold text-primary-900 mb-3 text-center">
            Give By Mail
          </h3>
          <p class="text-stone-600 text-center mb-6 leading-relaxed">
            Mail a check to the church office. Please make checks payable to
            "New Brunswick Church of Christ."
          </p>

          <address class="not-italic text-center text-stone-500 bg-cream-100 rounded-xl p-4">
            <p class="font-semibold text-primary-800">{siteConfig.contact.address}</p>
            <p>{siteConfig.contact.city}, {siteConfig.contact.state} {siteConfig.contact.zip}</p>
          </address>
        </div>
      </div>
    </Container>
  </section>

  <!-- Online Giving Section -->
  <section id="online-giving" class="py-20 lg:py-28">
    <Container>
      <div class="max-w-3xl mx-auto">
        <div class="text-center mb-12">
          <div class="inline-flex items-center gap-2 mb-4">
            <span class="w-8 h-[2px] bg-terra-400"></span>
            <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">Secure & Easy</span>
            <span class="w-8 h-[2px] bg-terra-400"></span>
          </div>
          <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-4">
            Online Giving
          </h2>
          <p class="text-stone-600 text-lg">
            Give securely using the form below
          </p>
        </div>

        <!-- Placeholder for giving platform -->
        <div class="bg-gradient-to-br from-cream-100 to-cream-200 rounded-2xl p-12 text-center min-h-[400px] flex flex-col items-center justify-center border-2 border-dashed border-cream-400">
          <div class="w-20 h-20 rounded-full bg-white shadow-soft flex items-center justify-center mb-6">
            <svg class="w-10 h-10 text-terra-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
              <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
            </svg>
          </div>
          <h3 class="text-2xl font-display font-semibold text-primary-900 mb-3">
            Online Giving Coming Soon
          </h3>
          <p class="text-stone-600 mb-6 max-w-md">
            We're setting up our secure online giving platform.
            In the meantime, please give in person or by mail.
          </p>
          <Button href={`mailto:${siteConfig.contact.email}`} variant="primary">
            Contact Church Office
          </Button>
        </div>

        <!-- Security notice -->
        <div class="flex items-center justify-center gap-3 mt-8 text-sm text-stone-500">
          <svg class="w-5 h-5 text-sage-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
          </svg>
          <span>Your financial information is secure and encrypted. NBCC never stores your payment details.</span>
        </div>
      </div>
    </Container>
  </section>

  <!-- Impact Section -->
  <section class="py-20 bg-primary-950 text-white relative overflow-hidden">
    <!-- Texture overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-terra-500/10 to-transparent pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-primary-700/20 rounded-full blur-3xl pointer-events-none"></div>

    <Container class="relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 mb-4">
          <span class="w-8 h-[1px] bg-golden-400"></span>
          <span class="text-golden-400 text-sm font-medium tracking-widest uppercase">Your Impact</span>
          <span class="w-8 h-[1px] bg-golden-400"></span>
        </div>
        <h2 class="text-4xl md:text-5xl font-display font-semibold mb-4">
          Your Giving Makes a Difference
        </h2>
        <p class="text-primary-200 text-lg max-w-2xl mx-auto">
          Every gift, no matter the size, helps us continue our mission of uplifting
          Christ and serving our community. Your generosity supports:
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-4xl mx-auto">
        {impactAreas.map((area, index) => (
          <div class="group relative bg-white/5 backdrop-blur-sm rounded-2xl p-8 border border-white/10 hover:bg-white/10 transition-all duration-300">
            <!-- Number badge -->
            <div class="absolute -top-3 -left-3 w-10 h-10 bg-terra-500 rounded-xl flex items-center justify-center font-display font-bold text-lg shadow-lg">
              {index + 1}
            </div>

            <div class="flex items-start gap-5">
              <div class="w-14 h-14 rounded-xl bg-primary-800/50 flex items-center justify-center shrink-0 group-hover:bg-terra-500/30 transition-colors">
                <svg class="w-7 h-7 text-golden-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={area.icon} />
                </svg>
              </div>
              <div>
                <h3 class="text-xl font-display font-semibold text-white mb-2">
                  {area.title}
                </h3>
                <p class="text-primary-200 leading-relaxed">
                  {area.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </section>

  <!-- Thank You Section -->
  <section class="relative py-20 overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1500382017468-9049fed747ef?w=1920&q=80"
        alt=""
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-primary-950/85"></div>
    </div>

    <Container class="relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="w-20 h-20 mx-auto mb-8 rounded-full bg-terra-500/20 flex items-center justify-center">
          <svg class="w-10 h-10 text-terra-400" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z" />
          </svg>
        </div>

        <h2 class="text-3xl md:text-4xl font-display font-semibold text-white mb-4">
          Thank You for Your Generosity
        </h2>
        <p class="text-primary-200 text-lg mb-8">
          Your gifts are received with gratitude and managed with integrity.
          If you have questions about giving, we're here to help.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary">
            Contact Us
          </Button>
          <a
            href={`tel:${siteConfig.contact.phone}`}
            class="btn btn-secondary !bg-white/10 !text-white border-white/30 hover:!bg-white/20 inline-flex items-center gap-2"
          >
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
            </svg>
            {siteConfig.contact.phoneFormatted}
          </a>
        </div>
      </div>
    </Container>
  </section>
</PageLayout>
