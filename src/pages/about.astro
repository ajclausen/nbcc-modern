---
import PageLayout from '@/layouts/PageLayout.astro';
import Container from '@/components/ui/Container.astro';
import Button from '@/components/ui/Button.astro';
import { siteConfig } from '@/data/siteConfig';

// Updated Core Values based on corrected content
const values = [
  {
    title: 'Biblical Authority',
    description: 'We believe the Bible is God\'s inspired Word and our final authority for faith and practice.',
    icon: 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253',
  },
  {
    title: 'Grace & Truth',
    description: 'We strive to balance God\'s amazing grace with His unchanging truth in all we do.',
    icon: 'M3 6l3 1m0 0l-3 9a5.002 5.002 0 006.001 0M6 7l3 9M6 7l6-2m6 2l3-1m-3 1l-3 9a5.002 5.002 0 006.001 0M18 7l3 9m-3-9l-6-2m0-2v2m0 16V5m0 16H9m3 0h3',
  },
  {
    title: 'Authentic Community',
    description: 'We value genuine relationships where people can be real, find support, and grow together.',
    icon: 'M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z',
  },
  {
    title: 'Intentional Discipleship',
    description: 'We are committed to helping every person take their next step in following Jesus.',
    icon: 'M13 7h8m0 0v8m0-8l-8 8-4-4-6 6',
  },
];

// Updated milestones with accurate historical information
const milestones = [
  { year: '1856', event: 'New Brunswick Church of Christ founded by a small group of devoted believers in a humble log cabin meeting house' },
  { year: '1870s', event: 'First permanent church building constructed as the congregation grew in faith and numbers' },
  { year: '1920s', event: 'Church persevered as the town of New Brunswick faded, remaining a beacon of faith in Boone County' },
  { year: '1970s', event: 'Major renovation and expansion of facilities to serve the growing Lebanon community' },
  { year: 'Today', event: 'Continuing to make disciples of Jesus Christ who make disciples, transforming our community with God\'s love' },
];

// Leadership team
const leadership = [
  {
    name: 'John Clausen',
    role: 'Elder',
    description: 'John has served as an elder at NBCC for over 15 years, bringing wisdom and pastoral care to our congregation.',
    initials: 'JC',
    color: 'from-primary-600 to-primary-800',
  },
  {
    name: 'Billy Slater',
    role: 'Worship Leader',
    description: 'Billy leads our worship ministry with passion, helping our congregation connect with God through music.',
    initials: 'BS',
    color: 'from-terra-500 to-terra-700',
  },
  {
    name: 'Lisa Slater',
    role: "Children's Ministry Director",
    description: 'Lisa oversees our thriving children\'s programs, creating a fun and safe environment for kids to learn about Jesus.',
    initials: 'LS',
    color: 'from-sage-500 to-sage-600',
  },
  {
    name: 'Rusty',
    role: 'Youth Minister',
    description: 'Rusty leads our youth group with energy and dedication, mentoring the next generation of believers.',
    initials: 'R',
    color: 'from-golden-500 to-golden-600',
  },
];
---

<PageLayout
  title="About Us"
  description="Learn about New Brunswick Church of Christ - an independent, non-denominational church family serving Lebanon, Indiana since 1856. Discover our restoration heritage and mission to make disciples."
  heroTitle="Our Story"
  heroSubtitle="Serving Lebanon Since 1856 — An independent, non-denominational church following the New Testament pattern"
  heroImage="https://images.unsplash.com/photo-1438232992991-995b7058bbb3?w=1920&q=80"
>
  <!-- History Section -->
  <section class="py-20 lg:py-28 relative overflow-hidden">
    <!-- Decorative background -->
    <div class="absolute inset-0 bg-gradient-to-br from-cream-50 via-white to-primary-50"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-terra-100/20 to-transparent"></div>

    <Container class="relative">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Image with editorial treatment -->
        <div class="relative order-2 lg:order-1">
          <div class="relative">
            <!-- Main Image -->
            <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-elevated">
              <img
                src="https://images.unsplash.com/photo-1509021436665-8f07dbf5bf1d?w=800&q=80"
                alt="Historic church interior"
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </div>

            <!-- Floating year badge -->
            <div class="absolute -bottom-6 -right-6 bg-primary-900 text-white rounded-xl p-5 shadow-elevated hidden md:block">
              <p class="text-terra-400 text-xs font-medium tracking-widest uppercase">Founded</p>
              <p class="text-4xl font-display font-bold">{siteConfig.founded}</p>
            </div>

            <!-- Decorative element -->
            <div class="absolute -top-4 -left-4 w-24 h-24 bg-terra-100 rounded-2xl -z-10"></div>
          </div>
        </div>

        <!-- Content -->
        <div class="order-1 lg:order-2">
          <div class="inline-flex items-center gap-2 mb-6">
            <span class="w-12 h-[2px] bg-terra-500"></span>
            <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">Our Heritage</span>
          </div>

          <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-6 leading-tight">
            Over 165 Years<br />
            <span class="text-terra-600 italic">of Faithful Ministry</span>
          </h2>

          <div class="space-y-5 text-lg text-stone-600 leading-relaxed">
            <p>
              For over <strong class="text-primary-800 font-semibold">165 years</strong>, New Brunswick Church of Christ
              has been a cornerstone of faith in the Lebanon community. Founded in <strong class="text-primary-800 font-semibold">1856</strong> by
              a small group of devoted believers, our church has grown from a humble log cabin meeting house to a thriving
              congregation that impacts lives throughout Boone County and beyond.
            </p>
            <p>
              As an <strong class="text-primary-800">independent, non-denominational church</strong>, we seek to follow the
              New Testament pattern for the church, focusing on the essentials of faith while allowing freedom in matters
              of opinion. Our restoration heritage calls us back to simple New Testament Christianity — no more, no less.
            </p>
            <p>
              Today, we continue the mission our founders began: <strong class="text-primary-800">making disciples of Jesus Christ
              who make disciples</strong>. Through vibrant worship, practical teaching, authentic community, and compassionate
              service, we're seeing lives transformed by the power of the Gospel.
            </p>
          </div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Mission & Vision Section -->
  <section class="py-20 bg-primary-950 text-white relative overflow-hidden">
    <!-- Texture overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-terra-500/10 to-transparent pointer-events-none"></div>
    <div class="absolute bottom-0 left-0 w-64 h-64 bg-primary-700/20 rounded-full blur-3xl pointer-events-none"></div>

    <Container class="relative">
      <div class="grid lg:grid-cols-2 gap-16 lg:gap-24">
        <!-- Mission -->
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center gap-3 mb-6">
            <span class="w-8 h-[1px] bg-golden-400"></span>
            <span class="text-golden-400 text-sm font-medium tracking-widest uppercase">Our Mission</span>
            <span class="w-8 h-[1px] bg-golden-400 lg:hidden"></span>
          </div>

          <blockquote class="relative mb-6">
            <div class="absolute -top-4 -left-2 text-6xl font-display text-primary-700/30 leading-none hidden lg:block">"</div>
            <p class="text-2xl md:text-3xl font-display text-cream-100 italic leading-snug relative z-10 lg:pl-6">
              To make disciples of Jesus Christ who make disciples, transforming our community and world with God's love.
            </p>
          </blockquote>

          <p class="text-primary-200 lg:pl-6">
            Everything we do flows from this mission — worship, teaching, fellowship, and service all point to Jesus.
          </p>
        </div>

        <!-- Vision -->
        <div class="text-center lg:text-left">
          <div class="inline-flex items-center gap-3 mb-6">
            <span class="w-8 h-[1px] bg-terra-400"></span>
            <span class="text-terra-400 text-sm font-medium tracking-widest uppercase">Our Vision</span>
            <span class="w-8 h-[1px] bg-terra-400 lg:hidden"></span>
          </div>

          <blockquote class="relative mb-6">
            <div class="absolute -top-4 -left-2 text-6xl font-display text-primary-700/30 leading-none hidden lg:block">"</div>
            <p class="text-2xl md:text-3xl font-display text-cream-100 italic leading-snug relative z-10 lg:pl-6">
              To be a church where people far from God are welcomed home, find hope in Jesus, and grow into fully devoted followers of Christ.
            </p>
          </blockquote>

          <p class="text-primary-200 lg:pl-6">
            We dream of a community transformed — lives changed, families restored, and hope renewed through the Gospel.
          </p>
        </div>
      </div>
    </Container>
  </section>

  <!-- Timeline Section -->
  <section class="py-20 bg-stone-100 relative overflow-hidden">
    <!-- Texture -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

    <Container class="relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 mb-4">
          <span class="w-8 h-[1px] bg-terra-400"></span>
          <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">Our Journey</span>
          <span class="w-8 h-[1px] bg-terra-400"></span>
        </div>
        <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-4">
          Milestones of Faith
        </h2>
        <p class="text-stone-600 text-lg max-w-2xl mx-auto">
          A brief look at God's faithfulness through our history
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="relative">
          <!-- Vertical line - centered -->
          <div class="absolute left-8 md:left-1/2 top-0 bottom-0 w-[2px] bg-primary-200 md:-translate-x-px"></div>

          {milestones.map((milestone, index) => (
            <div class="relative mb-12 last:mb-0">
              <!-- Mobile layout -->
              <div class="flex items-start gap-6 md:hidden">
                <div class="relative z-10 w-16 h-16 rounded-full bg-primary-900 flex items-center justify-center shrink-0 shadow-lg">
                  <span class="text-white font-display font-bold text-sm">{milestone.year}</span>
                </div>
                <div class="flex-1 bg-white rounded-xl p-5 shadow-soft border border-cream-200">
                  <p class="text-stone-700">{milestone.event}</p>
                </div>
              </div>

              <!-- Desktop layout - date centered, text alternating -->
              <div class="hidden md:flex md:items-center md:justify-center">
                <!-- Left side -->
                <div class="flex-1 pr-8">
                  {index % 2 === 0 ? (
                    <div class="bg-white rounded-xl p-5 shadow-soft border border-cream-200 text-right ml-auto max-w-md">
                      <p class="text-stone-700">{milestone.event}</p>
                    </div>
                  ) : (
                    <div></div>
                  )}
                </div>

                <!-- Center date badge -->
                <div class="relative z-10 w-16 h-16 rounded-full bg-primary-900 flex items-center justify-center shrink-0 shadow-lg">
                  <span class="text-white font-display font-bold text-sm">{milestone.year}</span>
                </div>

                <!-- Right side -->
                <div class="flex-1 pl-8">
                  {index % 2 !== 0 ? (
                    <div class="bg-white rounded-xl p-5 shadow-soft border border-cream-200 text-left mr-auto max-w-md">
                      <p class="text-stone-700">{milestone.event}</p>
                    </div>
                  ) : (
                    <div></div>
                  )}
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </Container>
  </section>

  <!-- Values Section -->
  <section class="py-20 lg:py-28 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-cream-50 to-white"></div>

    <Container class="relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 mb-4">
          <span class="w-8 h-[1px] bg-terra-400"></span>
          <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">Our Heart</span>
          <span class="w-8 h-[1px] bg-terra-400"></span>
        </div>
        <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-4">
          Our Core Values
        </h2>
        <p class="text-stone-600 text-lg max-w-2xl mx-auto">
          These values shape who we are and guide everything we do as a church family
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        {values.map((value, index) => (
          <div class="group bg-white rounded-2xl p-8 shadow-soft hover:shadow-card transition-all duration-300 border border-cream-200 relative overflow-hidden">
            <!-- Number badge -->
            <div class="absolute -top-3 -left-3 w-12 h-12 bg-terra-500 rounded-xl flex items-center justify-center font-display font-bold text-lg text-white shadow-lg leading-none">
              <span class="translate-x-px translate-y-0.5 tabular-nums">{index + 1}</span>
            </div>

            <div class="w-14 h-14 mx-auto mb-5 rounded-2xl bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center group-hover:scale-110 transition-transform">
              <svg class="w-7 h-7 text-primary-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d={value.icon} />
              </svg>
            </div>

            <h3 class="font-display text-xl font-semibold text-primary-900 mb-3 text-center">
              {value.title}
            </h3>
            <p class="text-stone-600 text-center leading-relaxed">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </Container>
  </section>

  <!-- Leadership Section -->
  <section class="py-20 lg:py-28 bg-cream-100 relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 left-0 w-96 h-96 bg-primary-100/50 rounded-full blur-3xl -translate-x-1/2 -translate-y-1/2"></div>
    <div class="absolute bottom-0 right-0 w-64 h-64 bg-terra-100/50 rounded-full blur-3xl translate-x-1/2 translate-y-1/2"></div>

    <Container class="relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 mb-4">
          <span class="w-8 h-[1px] bg-terra-400"></span>
          <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">Our Team</span>
          <span class="w-8 h-[1px] bg-terra-400"></span>
        </div>
        <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-4">
          Our Leadership
        </h2>
        <p class="text-stone-600 text-lg max-w-2xl mx-auto">
          Meet the dedicated servants who help guide and shepherd our church family
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {leadership.map((leader) => (
          <div class="group text-center">
            <!-- Avatar -->
            <div class="relative mx-auto mb-6 w-32 h-32">
              <div class={`w-full h-full rounded-2xl bg-gradient-to-br ${leader.color} flex items-center justify-center shadow-card group-hover:shadow-elevated transition-shadow duration-300 group-hover:scale-105 transform transition-transform`}>
                <span class="text-white font-display text-4xl font-bold">{leader.initials}</span>
              </div>
              <!-- Decorative ring -->
              <div class="absolute inset-0 rounded-2xl border-2 border-terra-300/50 scale-110 opacity-0 group-hover:opacity-100 transition-opacity"></div>
            </div>

            <!-- Name -->
            <h3 class="font-display text-xl font-semibold text-primary-900 mb-1">
              {leader.name}
            </h3>

            <!-- Role badge -->
            <span class="inline-block px-3 py-1 bg-terra-100 text-terra-700 rounded-full text-sm font-medium mb-4">
              {leader.role}
            </span>

            <!-- Description -->
            <p class="text-stone-600 text-sm leading-relaxed">
              {leader.description}
            </p>
          </div>
        ))}
      </div>
    </Container>
  </section>

  <!-- Community Section -->
  <section class="py-20 lg:py-28">
    <Container>
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Content -->
        <div>
          <div class="inline-flex items-center gap-2 mb-6">
            <span class="w-12 h-[2px] bg-terra-500"></span>
            <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">Our Family</span>
          </div>

          <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-6 leading-tight">
            A Place to<br />
            <span class="text-terra-600 italic">Belong</span>
          </h2>

          <div class="space-y-5 text-lg text-stone-600 leading-relaxed mb-8">
            <p>
              At NBCC, we're not just a congregation—we're a <strong class="text-primary-800">family</strong>.
              We laugh together, cry together, pray together, and grow together. We believe that faith is
              meant to be lived in community.
            </p>
            <p>
              Whether you're new to faith, returning after time away, or looking for a church home,
              you'll find a warm welcome here. We're a diverse group of people from all walks of life,
              united by our love for Jesus and each other.
            </p>
          </div>

          <div class="flex flex-wrap gap-4">
            <a href="/visit" class="btn btn-warm">
              Plan Your Visit
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </a>
            <Button href="/beliefs" variant="outline">
              What We Believe
            </Button>
          </div>
        </div>

        <!-- Image Grid -->
        <div class="grid grid-cols-2 gap-4">
          <img
            src="https://images.unsplash.com/photo-1529070538774-1843cb3265df?w=400&q=80"
            alt="Church community gathering"
            class="rounded-2xl shadow-soft w-full aspect-square object-cover"
            loading="lazy"
          />
          <img
            src="https://images.unsplash.com/photo-1511632765486-a01980e01a18?w=400&q=80"
            alt="People in fellowship"
            class="rounded-2xl shadow-soft w-full aspect-square object-cover mt-8"
            loading="lazy"
          />
          <img
            src="https://images.unsplash.com/photo-1517457373958-b7bdd4587205?w=400&q=80"
            alt="Community service"
            class="rounded-2xl shadow-soft w-full aspect-square object-cover -mt-8"
            loading="lazy"
          />
          <img
            src="https://images.unsplash.com/photo-1523580494863-6f3031224c94?w=400&q=80"
            alt="Worship together"
            class="rounded-2xl shadow-soft w-full aspect-square object-cover"
            loading="lazy"
          />
        </div>
      </div>
    </Container>
  </section>

  <!-- CTA -->
  <section class="relative py-24 overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1504052434569-70ad5836ab65?w=1920&q=80"
        alt=""
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-primary-950/90"></div>
    </div>

    <!-- Texture overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

    <Container class="relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center gap-3 mb-6">
          <span class="w-8 h-[1px] bg-golden-400"></span>
          <span class="text-golden-400 text-sm font-medium tracking-widest uppercase">Join Us</span>
          <span class="w-8 h-[1px] bg-golden-400"></span>
        </div>

        <h2 class="text-4xl md:text-5xl font-display font-semibold text-white mb-6">
          Come See for Yourself
        </h2>

        <p class="text-primary-200 text-lg mb-10 max-w-2xl mx-auto">
          The best way to know NBCC is to visit. We'd love to meet you this Sunday and
          show you what our church family is all about.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/visit" class="btn btn-warm">
            Plan Your Visit
          </a>
          <Button href="/contact" variant="outline" class="!bg-white/10 !text-white border-white/30 hover:!bg-white/20">
            Contact Us
          </Button>
        </div>
      </div>
    </Container>
  </section>
</PageLayout>
