---
import PageLayout from '@/layouts/PageLayout.astro';
import Container from '@/components/ui/Container.astro';
import Button from '@/components/ui/Button.astro';
import LocationCard from '@/components/sections/LocationCard.astro';
import { siteConfig } from '@/data/siteConfig';

const expectations = [
  {
    question: "What should I wear?",
    answer: "Come as you are! You'll see everything from jeans to dress clothes. We care more about your heart than your wardrobe.",
    icon: 'M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z',
  },
  {
    question: "How long is the service?",
    answer: "Our main service typically lasts about an hour to an hour and fifteen minutes. Sunday School before the service is about 45 minutes.",
    icon: 'M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  {
    question: "What about my kids?",
    answer: "We love kids! Children start with us in the main service and are dismissed to Kids Church after communion (around 10:20 AM). We also have Sunday School classes for all ages at 9:00 AM.",
    icon: 'M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  {
    question: "Will I have to do anything?",
    answer: "Nope! Feel free to participate as much or as little as you're comfortable with. You won't be singled out or asked to stand up.",
    icon: 'M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z',
  },
  {
    question: "What's communion like?",
    answer: "We observe the Lord's Supper each Sunday. Trays are passed through the congregation. If you're a believer, you're welcome to participate. If you're still exploring, feel free to just pass the tray along.",
    icon: 'M21 15.9999V7.9999C21 6.8954 20.1046 5.9999 19 5.9999H5C3.89543 5.9999 3 6.8954 3 7.9999V15.9999C3 17.1045 3.89543 17.9999 5 17.9999H19C20.1046 17.9999 21 17.1045 21 15.9999Z',
  },
  {
    question: "Where do I park?",
    answer: "We have a parking lot right next to the church building with plenty of spaces. If you need accessibility accommodations, let us know!",
    icon: 'M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z',
  },
];

const sundaySteps = [
  {
    time: '9:00 AM',
    title: 'Sunday School',
    description: 'Classes for all ages in a smaller group setting. A great way to study the Bible and connect with others. Skip this if you\'d rather just come for the main service!',
  },
  {
    time: '10:00 AM',
    title: 'Main Service Begins',
    description: 'We gather together for worship through singing, prayer, and Scripture reading. The atmosphere is welcoming and relaxed.',
  },
  {
    time: '~10:15 AM',
    title: 'Communion',
    description: 'Each week we share in the Lord\'s Supper together, remembering Jesus\' sacrifice. Kids are dismissed to Kids Church after communion.',
  },
  {
    time: '~10:25 AM',
    title: 'Message',
    description: 'A practical, biblical message that connects Scripture to everyday life. We aim for teaching that\'s relevant and applicable.',
  },
  {
    time: '~11:15 AM',
    title: 'Service Ends',
    description: 'Stick around after the service! Grab some coffee, meet some people, and let us get to know you. We\'d love to answer any questions you have.',
  },
];
---

<PageLayout
  title="Plan Your Visit"
  description="Everything you need to know before visiting New Brunswick Church of Christ. We can't wait to meet you!"
  heroTitle="Plan Your Visit"
  heroSubtitle="We'd love to meet you this Sunday"
  heroImage="https://images.unsplash.com/photo-1529070538774-1843cb3265df?w=1920&q=80"
>
  <!-- Welcome Message -->
  <section class="py-20 lg:py-28 relative overflow-hidden">
    <!-- Decorative background -->
    <div class="absolute inset-0 bg-gradient-to-br from-cream-50 via-white to-primary-50"></div>
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-terra-100/20 to-transparent"></div>

    <Container class="relative">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Content -->
        <div>
          <div class="inline-flex items-center gap-2 mb-6">
            <span class="w-12 h-[2px] bg-terra-500"></span>
            <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">New Here?</span>
          </div>

          <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-6 leading-tight">
            You're Already<br />
            <span class="text-terra-600 italic">Welcome</span>
          </h2>

          <div class="space-y-5 text-lg text-stone-600 leading-relaxed">
            <p>
              We know visiting a new church can feel intimidating. <em>Will I know anyone?
              What should I expect? Will I fit in?</em> We get it—and we want you to know
              that <strong class="text-primary-800">you're already welcome here</strong>, exactly as you are.
            </p>
            <p>
              At NBCC, you'll find a warm, friendly community that genuinely wants to
              know you. We're not perfect, but we're real. We're a family growing in
              faith together, and there's always room for one more.
            </p>
          </div>
        </div>

        <!-- Image -->
        <div class="relative">
          <div class="aspect-[4/3] rounded-2xl overflow-hidden shadow-elevated">
            <img
              src="https://images.unsplash.com/photo-1523580494863-6f3031224c94?w=800&q=80"
              alt="Friendly welcome at church"
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>

          <!-- Floating quote -->
          <div class="absolute -bottom-6 -left-6 bg-white rounded-xl p-5 shadow-card max-w-[220px] hidden md:block border border-cream-200">
            <p class="text-terra-600 font-accent text-xl leading-tight">"Come as you are — you'll fit right in!"</p>
          </div>

          <!-- Decorative element -->
          <div class="absolute -top-4 -right-4 w-24 h-24 bg-primary-100 rounded-2xl -z-10"></div>
        </div>
      </div>
    </Container>
  </section>

  <!-- Service Times -->
  <section class="py-20 bg-primary-950 text-white relative overflow-hidden">
    <!-- Texture overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-1/3 h-full bg-gradient-to-l from-terra-500/10 to-transparent pointer-events-none"></div>

    <Container class="relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 mb-4">
          <span class="w-8 h-[1px] bg-golden-400"></span>
          <span class="text-golden-400 text-sm font-medium tracking-widest uppercase">When to Come</span>
          <span class="w-8 h-[1px] bg-golden-400"></span>
        </div>
        <h2 class="text-4xl md:text-5xl font-display font-semibold mb-4">
          Service Times
        </h2>
        <p class="text-primary-200 text-lg max-w-2xl mx-auto">
          Join us any Sunday morning — everyone is welcome
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
        <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 text-center border border-white/10">
          <p class="text-terra-400 text-sm font-medium mb-2 uppercase tracking-wide">Sunday School</p>
          <p class="text-4xl font-display font-bold text-white mb-1">9:00 AM</p>
          <p class="text-primary-300 text-sm">All ages welcome</p>
        </div>
        <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 text-center border border-white/10 relative">
          <div class="absolute -top-3 left-1/2 -translate-x-1/2 px-3 py-1 bg-terra-500 rounded-full text-xs font-semibold">
            Main Service
          </div>
          <p class="text-terra-400 text-sm font-medium mb-2 uppercase tracking-wide">Worship</p>
          <p class="text-4xl font-display font-bold text-white mb-1">10:00 AM</p>
          <p class="text-primary-300 text-sm">Join us here!</p>
        </div>
        <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 text-center border border-white/10">
          <p class="text-terra-400 text-sm font-medium mb-2 uppercase tracking-wide">Kids Church</p>
          <p class="text-4xl font-display font-bold text-white mb-1">10:20 AM</p>
          <p class="text-primary-300 text-sm">After communion</p>
        </div>
        <div class="bg-white/5 backdrop-blur-sm rounded-2xl p-8 text-center border border-white/10">
          <p class="text-terra-400 text-sm font-medium mb-2 uppercase tracking-wide">Wednesday</p>
          <p class="text-4xl font-display font-bold text-white mb-1">7:00 PM</p>
          <p class="text-primary-300 text-sm">Prayer Meeting</p>
        </div>
      </div>
    </Container>
  </section>

  <!-- What to Expect -->
  <section class="py-20 bg-stone-100 relative overflow-hidden">
    <!-- Texture -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

    <Container class="relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 mb-4">
          <span class="w-8 h-[1px] bg-terra-400"></span>
          <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">FAQ</span>
          <span class="w-8 h-[1px] bg-terra-400"></span>
        </div>
        <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-4">
          What to Expect
        </h2>
        <p class="text-stone-600 text-lg max-w-2xl mx-auto">
          Common questions answered
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-6 max-w-5xl mx-auto">
        {expectations.map((item, index) => (
          <div class="group bg-white rounded-2xl p-8 shadow-soft hover:shadow-card transition-all duration-300 border border-cream-200 relative overflow-hidden">
            <!-- Number badge -->
            <div class="absolute -top-3 -left-3 w-12 h-12 bg-terra-500 rounded-xl flex items-center justify-center font-display font-bold text-lg text-white shadow-lg leading-none">
              <span class="translate-x-px translate-y-0.5 tabular-nums">{index + 1}</span>
            </div>

            <div class="flex items-start gap-5">
              <div class="w-12 h-12 rounded-xl bg-gradient-to-br from-primary-100 to-primary-200 flex items-center justify-center shrink-0 group-hover:scale-110 transition-transform">
                <svg class="w-6 h-6 text-primary-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d={item.icon} />
                </svg>
              </div>
              <div>
                <h3 class="font-display text-xl font-semibold text-primary-900 mb-2">
                  {item.question}
                </h3>
                <p class="text-stone-600 leading-relaxed">
                  {item.answer}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </section>

  <!-- Sunday Morning Walkthrough -->
  <section class="py-20 lg:py-28 relative overflow-hidden">
    <div class="absolute inset-0 bg-gradient-to-br from-cream-50 to-white"></div>

    <Container class="relative">
      <div class="text-center mb-16">
        <div class="inline-flex items-center gap-3 mb-4">
          <span class="w-8 h-[1px] bg-terra-400"></span>
          <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">Your First Visit</span>
          <span class="w-8 h-[1px] bg-terra-400"></span>
        </div>
        <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-4">
          Your Sunday Morning
        </h2>
        <p class="text-stone-600 text-lg max-w-2xl mx-auto">
          A typical Sunday at NBCC
        </p>
      </div>

      <div class="max-w-3xl mx-auto">
        <div class="relative">
          <!-- Vertical timeline line -->
          <div class="absolute left-6 md:left-8 top-0 bottom-0 w-[2px] bg-primary-200"></div>

          {sundaySteps.map((step, index) => (
            <div class="relative flex gap-6 md:gap-8 mb-10 last:mb-0">
              <!-- Timeline dot -->
              <div class="relative z-10 w-12 h-12 md:w-16 md:h-16 rounded-full bg-primary-900 flex items-center justify-center shrink-0 shadow-lg">
                <span class="text-white font-display font-bold text-lg">{index + 1}</span>
              </div>

              <!-- Content -->
              <div class="flex-1 bg-white rounded-2xl p-6 md:p-8 shadow-soft border border-cream-200">
                <div class="flex flex-wrap items-center gap-3 mb-3">
                  <span class="text-terra-600 font-semibold text-sm">{step.time}</span>
                  <span class="text-stone-300">—</span>
                  <h3 class="font-display text-xl font-semibold text-primary-900">
                    {step.title}
                  </h3>
                </div>
                <p class="text-stone-600 leading-relaxed">
                  {step.description}
                </p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </Container>
  </section>

  <!-- Location -->
  <section class="py-20 bg-stone-100 relative overflow-hidden">
    <!-- Texture -->
    <div class="absolute inset-0 opacity-[0.02]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

    <Container class="relative">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
        <!-- Content -->
        <div>
          <div class="inline-flex items-center gap-2 mb-6">
            <span class="w-12 h-[2px] bg-terra-500"></span>
            <span class="text-terra-600 text-sm font-medium tracking-widest uppercase">Getting Here</span>
          </div>

          <h2 class="text-4xl md:text-5xl font-display font-semibold text-primary-900 mb-6 leading-tight">
            Easy to Find
          </h2>

          <div class="space-y-5 text-lg text-stone-600 leading-relaxed mb-8">
            <p>
              NBCC is located just south of Lebanon on <strong class="text-primary-800">State Road 39</strong>.
              We have plenty of parking available. If you need any accessibility accommodations,
              please let us know and we'll be happy to help.
            </p>
          </div>

          <!-- Address Card -->
          <div class="bg-white rounded-xl p-6 shadow-soft border border-cream-200 mb-6">
            <div class="flex items-start gap-4">
              <div class="w-12 h-12 rounded-xl bg-primary-100 flex items-center justify-center shrink-0">
                <svg class="w-6 h-6 text-primary-700" fill="none" stroke="currentColor" viewBox="0 0 24 24" stroke-width="1.5">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <p class="font-semibold text-primary-900">{siteConfig.contact.address}</p>
                <p class="text-stone-500">{siteConfig.contact.city}, {siteConfig.contact.state} {siteConfig.contact.zip}</p>
              </div>
            </div>
          </div>

          <div class="flex flex-wrap gap-4">
            <a href={siteConfig.contact.mapUrl} target="_blank" rel="noopener noreferrer" class="btn btn-warm inline-flex items-center gap-2">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
              </svg>
              Get Directions
            </a>
            <Button href="/contact" variant="outline">
              Contact Us
            </Button>
          </div>
        </div>

        <!-- Map/Location Card -->
        <div>
          <LocationCard />
        </div>
      </div>
    </Container>
  </section>

  <!-- Final CTA -->
  <section class="relative py-24 overflow-hidden">
    <div class="absolute inset-0">
      <img
        src="https://images.unsplash.com/photo-1507692812060-98338d07aca3?w=1920&q=80"
        alt=""
        class="w-full h-full object-cover"
      />
      <div class="absolute inset-0 bg-primary-950/90"></div>
    </div>

    <!-- Texture overlay -->
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url(&quot;data:image/svg+xml,%3Csvg viewBox='0 0 256 256' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.8' numOctaves='4' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)'/%3E%3C/svg%3E&quot;);"></div>

    <Container class="relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <div class="inline-flex items-center gap-3 mb-6">
          <span class="w-8 h-[1px] bg-golden-400"></span>
          <span class="text-golden-400 text-sm font-medium tracking-widest uppercase">See You Soon</span>
          <span class="w-8 h-[1px] bg-golden-400"></span>
        </div>

        <h2 class="text-4xl md:text-5xl font-display font-semibold text-white mb-6">
          See You Sunday?
        </h2>

        <p class="text-primary-200 text-lg mb-10 max-w-2xl mx-auto">
          We can't wait to meet you! If you have any questions before your visit,
          don't hesitate to reach out.
        </p>

        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button href="/contact" variant="primary">
            Contact Us First
          </Button>
          <a href="/livestream" class="btn btn-secondary !bg-white/10 !text-white border-white/30 hover:!bg-white/20 inline-flex items-center gap-2">
            <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
              <path d="M8 5v14l11-7z" />
            </svg>
            Watch Online First
          </a>
        </div>
      </div>
    </Container>
  </section>
</PageLayout>
