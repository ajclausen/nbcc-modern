---
import { serviceTimes } from '@/data/serviceTimes';
import Container from '@/components/ui/Container.astro';
import SectionHeading from '@/components/ui/SectionHeading.astro';
import Icon from '@/components/ui/Icon.astro';

interface Props {
  class?: string;
}

const { class: className = '' } = Astro.props;

const iconMap: Record<string, 'book' | 'church' | 'children' | 'pray'> = {
  book: 'book',
  church: 'church',
  children: 'children',
  pray: 'pray',
};
---

<section id="service-times" class:list={['py-20 bg-neutral-50', className]}>
  <Container>
    <SectionHeading
      title="Join Us This Week"
      subtitle="Everyone is welcome at NBCC. Come as you are."
    />

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
      {serviceTimes.map((service) => (
        <div class="bg-white rounded-2xl p-6 shadow-soft hover:shadow-elevated transition-shadow duration-300 text-center group">
          <div class="w-14 h-14 mx-auto mb-4 rounded-full bg-secondary-100 flex items-center justify-center group-hover:bg-secondary-200 transition-colors">
            <Icon
              name={iconMap[service.icon] || 'church'}
              size="lg"
              class="text-secondary-600"
            />
          </div>
          <h3 class="font-heading text-xl font-semibold text-primary-900 mb-2">
            {service.name}
          </h3>
          <p class="text-2xl font-bold text-secondary-600 mb-1">
            {service.time}
          </p>
          <p class="text-neutral-500 text-sm">
            {service.day}
          </p>
          {service.note && (
            <p class="text-neutral-400 text-xs mt-2 italic">
              {service.note}
            </p>
          )}
        </div>
      ))}
    </div>
  </Container>
</section>
