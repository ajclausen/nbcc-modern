---
interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center';
  class?: string;
  level?: 2 | 3;
  theme?: 'light' | 'dark';
}

const {
  title,
  subtitle,
  align = 'center',
  class: className = '',
  level = 2,
  theme = 'light',
} = Astro.props;

const HeadingTag = `h${level}` as 'h2' | 'h3';

const titleColor = theme === 'dark' ? 'text-white' : 'text-primary-900';
const subtitleColor = theme === 'dark' ? 'text-primary-100' : 'text-neutral-600';
---

<div class:list={[
  'mb-12',
  align === 'center' ? 'text-center' : 'text-left',
  className
]}>
  <HeadingTag class:list={[
    'font-heading font-semibold mb-4',
    level === 2 ? 'text-3xl md:text-4xl lg:text-5xl' : 'text-2xl md:text-3xl',
    titleColor
  ]}>
    {title}
  </HeadingTag>
  {subtitle && (
    <p class:list={[
      'text-lg md:text-xl max-w-2xl',
      align === 'center' ? 'mx-auto' : '',
      subtitleColor
    ]}>
      {subtitle}
    </p>
  )}
</div>
