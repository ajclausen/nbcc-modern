---
interface Props {
  pageUrl?: string;
  width?: number;
  height?: number;
  class?: string;
}

const {
  pageUrl = 'https://www.facebook.com/profile.php?id=100064902573630',
  width = 500,
  height = 600,
  class: className = '',
} = Astro.props;

// Facebook Page Plugin URL
const embedUrl = `https://www.facebook.com/plugins/page.php?href=${encodeURIComponent(pageUrl)}&tabs=timeline%2Cevents&width=${width}&height=${height}&small_header=false&adapt_container_width=true&hide_cover=false&show_facepile=true`;
---

<div class:list={['facebook-embed rounded-lg overflow-hidden shadow-soft bg-white', className]}>
  <iframe
    src={embedUrl}
    width={width}
    height={height}
    style={`border:none; overflow:hidden; max-width:100%;`}
    scrolling="no"
    frameborder="0"
    allowfullscreen={true}
    allow="autoplay; clipboard-write; encrypted-media; picture-in-picture; web-share"
    loading="lazy"
    title="NBCC Facebook Page"
  ></iframe>
</div>

<noscript>
  <p class="p-4 bg-neutral-100 rounded-lg text-center">
    <a href={pageUrl} target="_blank" rel="noopener noreferrer" class="text-primary-600 hover:underline">
      Visit our Facebook page
    </a>
    to see our latest updates.
  </p>
</noscript>
